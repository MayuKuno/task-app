<div class="container">
  <div class="container__show">
  <div class="top">

    <%= link_to '#', class: "btn btn3" do %>
      Edit 
    <% end %>
      
    <div class="image">
      <% if @user.image.present? %>
        <%= image_tag current_user.image.thumb.url %>
      <% else %>
        <%= image_tag asset_path("account.png") %>
      <% end %>
    </div>
  </div>
  <div class="bottom">
  <table>
    <tr>
      <th>Name</th>
      <td><%= @user.username %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @user.email %></td>
    </tr>
  </table>


    
    
  </div>
  </div>
</div>