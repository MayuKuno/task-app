<div class="container">
  <div class="container__index common">
    <h1>Group List</h1>
    <div class="groups">
      <% current_user.groups.each do |group| %>
        <div class="group">
          <div class="info">
              <%= link_to group_path(group), class:"name" do %>
                <%= group.name %>
              <% end %>
            <table>
              <tr>
                <th>Num of Tasks</th>
                <td><%= group.tasks.count %></td>
              </tr>
              <tr>
                <th>Participants</th>
                  <td class="user">
                    <%= group.users.count %>

                  </td>
               
              </tr>
            </table>
          </div>
          <div class="manage">
            <div>
              <%= link_to 'Edit', edit_group_path(group), class:"btn managebtn" %>
            </div>
            <div>

              <a class="modal-open-btn btn accent managebtn delete">Delete Group</a> 
              <%= link_to '', group_path(group), method: :delete, class: 'item-delete-btn'%>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>