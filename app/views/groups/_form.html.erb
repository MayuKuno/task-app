<%= form_with(model: group, local: true) do |form| %>
    <% if group.errors.any?%>
     <%= group.errors.full_messages.count %>件のエラーが発生しました
    <% end %>
    
    <%= form.text_field :name, placeholder: "グループ名を入力してください"%>
    <%= form.collection_check_boxes :user_ids, User.all, :id, :username%>
    <%= form.submit "Save" %>
  <% end %>