<div class="container">
  <div class="box">
    <div class="title">
        Login
    </div>
    <div class="contents">
    <%= form_with scope: :session, local: true do |f| %>

        <div class="form-item">
        <p class="formLabel">Email</p>
        <%= f.email_field :email, id: "session_email", class: "form-style", autocomplete:"new-password"%> 
        </div>

        <div class="form-item">
        <p class="formLabel">Password</p>
        <%= f.password_field :password, id: "session_password", class: "form-style", autocomplete:"new-password"%>
        </div>

        <div class="form-item">
        <%= f.submit "Log in", class:"login pull-right" %>
        </div>
        <%= link_to "Forgot password?", new_password_reset_path, class:"forgot"  %>

    <% end %>
    </div>
  </div>
</div>